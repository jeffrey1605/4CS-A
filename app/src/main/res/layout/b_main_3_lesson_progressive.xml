<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/home2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/autotutoria_background_color"
    tools:context=".b_main_1_lesson_progressive">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- This is the Text to Change from Main Menu according to Mode of Usage -->
        <TextView
            android:id="@+id/learning_mode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progressive Mode"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <!-- Card 1 -->
        <FrameLayout
            android:id="@+id/card1_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/learning_mode_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Card 1 content -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="16dp">

                <!-- Card content -->
                <!-- Background of the Card -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/card_background"/>

                <!-- Lesson Title and Lesson Description -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:paddingStart="30dp"
                    android:paddingTop="60dp">
                    <!-- Lesson Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:text="Lesson 1"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <!-- Lesson Description -->
                    <TextView
                        android:id="@+id/lesson_description_1"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:text="Introduction to Context-Free Grammar"
                        android:letterSpacing="0.15"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Image Holder for Lesson Icon -->
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_margin="30dp"
                    android:background="@drawable/module1"/>

                <!-- Frame Layout for Progress Bar and Text -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">
                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progressive_progressbar_lesson_1"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_marginHorizontal="30dp"
                        android:progress="0"
                        android:progressDrawable="@drawable/custom_progress_bar"/>
                    <!-- Progress Text -->
                    <TextView
                        android:id="@+id/progressive_progresstext_lesson_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginVertical="10dp"
                        android:text="% Completed"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Locked overlay for Card 1 -->
            <FrameLayout
                android:id="@+id/card1_locked_overlay"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#88000000"
                android:visibility="gone"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="@id/card1"
                app:layout_constraintStart_toStartOf="@id/card1"
                app:layout_constraintEnd_toEndOf="@id/card1"
                app:layout_constraintBottom_toBottomOf="@id/card1">

                <!-- Add any additional views for the overlay here -->

            </FrameLayout>

        </FrameLayout>

        <!-- Card 2 -->
        <FrameLayout
