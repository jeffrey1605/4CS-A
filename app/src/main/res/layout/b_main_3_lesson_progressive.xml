                        android:progress="0"
                        android:progressDrawable="@drawable/custom_progress_bar"/>
                    <!-- Progress Text -->
                    <TextView
                        android:id="@+id/progressive_progresstext_lesson_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginVertical="10dp"
                        android:text="% Completed"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <!-- CARD 2 LOCKED STATE OVERLAY -->
        <FrameLayout
            android:id="@+id/card2_locked_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="@id/card2_container"
            app:layout_constraintStart_toStartOf="@id/card2_container"
            app:layout_constraintEnd_toEndOf="@id/card2_container"
            app:layout_constraintBottom_toBottomOf="@id/card2_container">
            <!-- Background for the locked lesson cover -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/locked_lesson_cover" />
            <!-- Lock icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/lock"
                />
        </FrameLayout>

