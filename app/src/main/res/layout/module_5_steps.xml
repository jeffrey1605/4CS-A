<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnCount="5"
    android:background="@drawable/autotutoria_background_color"
    android:orientation="vertical"
    android:rowCount="1"
    tools:context=".module_3_steps">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:rowCount="1"
        android:columnCount="9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- First View -->
        <View
            android:id="@+id/module_progress_1"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corners" />

        <!-- Space -->
        <Space
            android:layout_width="20dp"
            android:layout_height="10dp" />

        <!-- Second View -->
        <View
            android:id="@+id/module_progress_2"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corners" />

        <!-- Space -->
        <Space
            android:layout_width="20dp"
            android:layout_height="10dp" />

        <!-- Third View -->
        <View
            android:id="@+id/module_progress_3"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corners" />

        <!-- Space -->
        <Space
            android:layout_width="20dp"
            android:layout_height="10dp" />

        <!-- Fourth View -->
        <View
            android:id="@+id/module_progress_4"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corners" />

        <!-- Space -->
        <Space
            android:layout_width="20dp"
            android:layout_height="10dp" />

        <!-- Fifth View -->
        <View
            android:id="@+id/module_progress_5"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_corners" />

    </GridLayout>

    <Button
        android:id="@+id/exitButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:background="@drawable/exit"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="125dp"
        />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
